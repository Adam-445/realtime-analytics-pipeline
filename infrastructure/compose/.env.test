# Test Environment Configuration
APP_ENVIRONMENT=testing
DEBUG=true

# Flink settings
FLINK_PARALLELISM=1
PROCESSING_METRICS_WINDOW_SIZE_SECONDS=5
PROCESSING_PERFORMANCE_WINDOW_SIZE_SECONDS=5
PROCESSING_SESSION_GAP_SECONDS=5
FLINK_WATERMARK_DELAY_SECONDS=1
FLINK_IDLE_TIMEOUT_SECONDS=5

# Disable planner mini-batch for low-latency perf tests
TABLE_MINIBATCH_ENABLED=false
TABLE_MINIBATCH_LATENCY_SECONDS=0
TABLE_MINIBATCH_SIZE=1

# Ingestion Configuration
INGESTION_MAX_BATCH_SIZE=100
INGESTION_BATCH_TIMEOUT_SECONDS=5
UVICORN_WORKERS=3

# Storage service settings
STORAGE_POLL_INTERVAL_SECONDS=1